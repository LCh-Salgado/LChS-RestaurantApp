<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#a3ccff"
    android:gravity="center_horizontal"
    android:orientation="vertical">


    <ImageView
        android:layout_width="509dp"
        android:layout_height="200sp"
        android:src="@drawable/pupuseria_background"
        android:textAlignment="center" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="25sp"
        android:textStyle="bold"
        android:text="+1(410)327-6262"
        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:id="@+id/addressBTN"
        android:text="4707 Eastern Ave, Baltimore, MD 21224"/>

    <ImageView
        android:layout_width="wrap_content"
        android:textAlignment="center"
        android:layout_height="300sp"
        android:src="@drawable/comida_sv" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/viewF"
        android:text="Ver Menu"
        android:textStyle="bold"/>

</LinearLayout>






